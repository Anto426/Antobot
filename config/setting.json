{
    "paths": {
        "database": {
            "root": "/Database",
            "files": {
                "oldMembers": "oldmember.json",
                "guildConfig": "guildconfig.json"
            }
        },
        "modules": {
            "root": "./module",
            "base": {
                "commands": "/base/commands",
                "events": "/base/events",
                "buttons": "/base/buttons"
            },
            "distube": {
                "commands": "/distube/commands",
                "events": "/distube/events",
                "buttons": "/distube/buttons"
            },
            "other": {
                "root": "/other"
            }
        },
        "assets": {
            "canvas": {
                "welcome_image": {
                    "width": 3840,
                    "height": 1350,
                    "avatarSize": 750,
                    "avatarBorderSize": 15,
                    "num_colors": 3,
                    "welcomeTextSize": "225px",
                    "nameTextSize": "150px",
                    "countTextSize": "105px",
                    "splashCount": 20
                },
                "fonts": {
                    "directory": "assets/canvas/fonts",
                    "files": [
                        "Roboto.ttf",
                        "Huninn-Regular.ttf",
                        "NotoColorEmoji-Regular.ttf",
                        "NotoSansJP.ttf"
                    ]
                }
            }
        }
    },
    "features": {
        "status": true,
        "holiday": true,
        "serverupdate": true,
        "music": true,
        "synchronize": true
    },
    "remote": {
        "github": {
            "urlrepo": "https://raw.githubusercontent.com/Anto426/Configsbot/refs/heads/main",
            "files": [
                "cookies.json",
                "description.json",
                "embed.json",
                "hollyday.json",
                "owner.json",
                "status.json",
                "sql.json"
            ],
            "apiBase": "https://api.github.com/users/"
        }
    }
}